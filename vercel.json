{
  "buildCommand": "pip install -r requirements.txt && python3 -m mkdocs build",
  "outputDirectory": "site",
  "installCommand": "pip install -r requirements.txt",
  "cleanUrls": false,
  "trailingSlash": true,
  "rewrites": [
    {
      "source": "/(.*)/$",
      "destination": "/$1/index.html"
    },
    {
      "source": "/",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/(.*)\\.md$",
      "destination": "/$1/",
      "permanent": true
    },
    {
      "source": "/index.md",
      "destination": "/",
      "permanent": true
    }
  ]
}

